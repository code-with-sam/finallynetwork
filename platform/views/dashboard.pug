extends layout

block content
  header.dashboard__header.cf
      h2.dashboard__title
        img.dashboard__title__logo(src="/img/f-logo.png" alt="Finally Network Logo" title="Finally Network" )
        span.dashboard__title__text Dashboard
  main.dashboard(data-username=`${username}` data-theme=`${selectedTheme}` )
    if pro == true
      h3.setting__title Settings
      section.dashboard__block
        .setting__items
          .setting__item
            h3 Website
          .setting__item
            h3 Theme
          .setting__item
            h3 Show Resteems
          .setting__item
            h3(title="specify a hashtag to use for your blog") Hashtag Filter

        .setting__values
          .setting__value
            a(href=`/@${username}`) /@#{username}

          .setting__value
            select.dashboard__theme-select
              option(value="lens") Lens
              option(value="hckr") HCKR
              option(value="campfire") Campfire
              option(value="make") Make
              option(value="critday") Critday

          .setting__value
            input.dashboard__resteem-checkbox(type="checkbox" name="resteem" checked=(showResteems))

          .setting__value
            input.dashboard__input.dashboard__tag-select(type="text" value=`${tag}` placeholder="e.g photography")

      .custom__settings.custom__settings--make-theme
        h3.setting__title Make Theme Settings
        section.dashboard__block
          .setting__items
            .setting__item
              h3(title="list of tags for navigation") Navigation
          .setting__values
            .setting__value
              input.dashboard__input.dashboard__nav-select(type="text" value=`${navigation}` placeholder="e.g photography, travel")

      section.dashboard__block.dashboard__block--save
            span.dashboard__button.dashboard__save save

      section.dashboard__block
        p Thank you for testing the Finally Beta Platform
        p If you need help please contact Sam via discord [sambillingham#7927]

    else
      section.dashboard__block
        h3 Unlock Website
        p.beta-unlock__details Unlocking beta access will remove the 'powered by Finally' badge.
        p.beta-unlock__details Pay what you want
        input.dashboard__input.dashboard__input--unlock-amount(placeholder="STEEM" type="number")
        span.beta-unlock__username
        span.dashboard__button.dashboard__button--unlock Unlock With Steemconnect
